datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       Int               @id @default(autoincrement())
  name     String?
  email    String?           @unique
  password String?
  routines PracticeRoutine[] @relation("PracticeRoutineuser")
}

model PracticeRoutine {
  id     Int     @id @default(autoincrement())
  name   String?
  user   User?   @relation("PracticeRoutineuser", fields: [userId], references: [id])
  userId Int?    @map("user")

  @@index([userId])
}